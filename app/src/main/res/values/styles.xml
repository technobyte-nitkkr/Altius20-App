<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/altius_green</item>
		<item name="colorPrimaryDark">@color/altius_green</item>
		<item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDisablePreview">true</item>
	</style>

	<style name="AppThemeCustom" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">#ffffff00</item>
		<item name="colorPrimaryDark">#ffffff00</item>
		<item name="android:statusBarColor">#ffffff00</item>
		<item name="android:shadowColor">#ffffff00</item>
		<item name="android:navigationBarColor">#ffffff00</item>

		<item name="colorAccent">#ffffff00</item>
	</style>

    <style name="AppFullScreenTheme" parent="Theme.AppCompat">
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>
